/* Основные настройки для всего приложения */
QWidget {
    font-family: "Arial";
    font-size: 14px;
    color: #333;
    background-color: #f0f0f0;
}

/* QLabel */
QLabel {
    color: #333;
}

/* QPushButton */
QPushButton {
    background-color: #3498db;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #2980b9;
}

QPushButton:pressed {
    background-color: #1f5f8b;
}

QPushButton:disabled {
    background-color: #bdc3c7;
    color: #7f8c8d;
}

/* QLineEdit */
QLineEdit {
    border: 1px solid #bdc3c7;
    padding: 5px;
    border-radius: 4px;
}

QLineEdit:focus {
    border: 1px solid #3498db;
}

/* QPlainTextEdit */
QPlainTextEdit {
    border: 1px solid #bdc3c7;
    padding: 5px;
    border-radius: 4px;
    background-color: white;
    color: #333;
}

/* QComboBox */
QComboBox {
    border: 1px solid #bdc3c7;
    padding: 5px;
    border-radius: 4px;
    background-color: white;
}

QComboBox:focus {
    border: 1px solid #3498db;
}

/* QComboBox::drop-down */
QComboBox::drop-down {
    border: none;
}

/* QComboBox::down-arrow */
QComboBox::down-arrow {
    image: url(down_arrow.png); /* Замените на свой путь к изображению стрелки */
}

/* QTabWidget */
QTabWidget::pane {
    border: 1px solid #bdc3c7;
    border-radius: 4px;
}

QTabWidget::tab-bar {
    left: 5px;
}

QTabBar::tab {
    background: #bdc3c7;
    border: 1px solid #bdc3c7;
    padding: 5px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background: #3498db;
    color: white;
}

QTabBar::tab:!selected {
    background: #ecf0f1;
    color: #333;
}

/* QScrollArea */
QScrollArea {
    border: none;
}

/* QStatusBar */
QStatusBar {
    background: #ecf0f1;
    color: #333;
    border-top: 1px solid #bdc3c7;
}

/* QMenuBar */
QMenuBar {
    background-color: #ecf0f1;
    color: #333;
}

QMenuBar::item {
    padding: 5px 10px;
}

QMenuBar::item:selected {
    background-color: #bdc3c7;
}

/* QStackedWidget */
QStackedWidget {
    border: 1px solid #bdc3c7;
    border-radius: 4px;
}

/* QGridLayout */
QGridLayout {
    margin: 10px;
    spacing: 10px;
}

/* QScrollArea */
QScrollArea {
    border: none;
}

/* QScrollBar */
QScrollBar:horizontal {
    border: none;
    background: #ecf0f1;
    height: 10px;
    margin: 0px 20px 0 20px;
}

QScrollBar::handle:horizontal {
    background: #bdc3c7;
    min-width: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:horizontal {
    background: none;
    border: none;
    width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
    width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar:vertical {
    border: none;
    background: #ecf0f1;
    width: 10px;
    margin: 20px 0 20px 0;
}

QScrollBar::handle:vertical {
    background: #bdc3c7;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:vertical {
    background: none;
    border: none;
    height: 20px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    background: none;
    border: none;
    height: 20px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}


