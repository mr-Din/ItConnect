QGridLayout {
    background-color: #eaffea;
    padding: 10px;
    margin: 10px;
}

QStackedWidget {
    background-color: #ccffcc;
    border: 2px solid #006400;
    border-radius: 5px;
}

QStackedWidget:disabled {
    background-color: #e0e0e0;
    border: 2px solid #a0a0a0;
}

QLabel {
    color: #006400;
    font-size: 14px;
    font-weight: bold;
    padding: 5px;
}

QLabel:disabled {
    color: #a0a0a0;
}

QPushButton {
    background-color: #7fff7f;
    color: #006400;
    border: 2px solid #006400;
    border-radius: 5px;
    padding: 5px 10px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #66ff66;
}

QPushButton:pressed {
    background-color: #4cff4c;
}

QPushButton:disabled {
    background-color: #e0e0e0;
    color: #a0a0a0;
    border: 2px solid #a0a0a0;
}

QPlainTextEdit {
    background-color: #e0ffe0;
    color: #006400;
    border: 1px solid #006400;
    border-radius: 5px;
    padding: 5px;
    font-family: Consolas, "Courier New", monospace;
}

QPlainTextEdit:disabled {
    background-color: #f0f0f0;
    color: #a0a0a0;
    border: 1px solid #a0a0a0;
}

QLineEdit {
    background-color: #e0ffe0;
    color: #006400;
    border: 1px solid #006400;
    border-radius: 5px;
    padding: 5px;
}

QLineEdit:disabled {
    background-color: #f0f0f0;
    color: #a0a0a0;
    border: 1px solid #a0a0a0;
}

QTabWidget::pane {
    border: 1px solid #006400;
    background: #ccffcc;
    border-radius: 5px;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background: #7fff7f;
    border: 1px solid #006400;
    border-radius: 5px;
    padding: 5px 10px;
    margin: 2px;
}

QTabBar::tab:selected {
    background: #66ff66;
    font-weight: bold;
}

QTabBar::tab:hover {
    background: #66ff66;
}

QTabBar::tab:disabled {
    background: #e0e0e0;
    color: #a0a0a0;
    border: 1px solid #a0a0a0;
}

QComboBox {
    background-color: #e0ffe0;
    color: #006400;
    border: 1px solid #006400;
    border-radius: 5px;
    padding: 5px;
}

QComboBox:disabled {
    background-color: #f0f0f0;
    color: #a0a0a0;
    border: 1px solid #a0a0a0;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 1px;
    border-left-color: #006400;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    width: 10px;
    height: 10px;
}


